<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".MainActivity"
    android:id="@+id/main">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_dark"
        app:title="AssistAI"
        app:titleTextColor="@color/white"
        android:elevation="4dp"/>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back,"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Mood & Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Progress Today"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/task_progress_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progress="65"
                            app:indicatorSize="48dp"
                            app:trackThickness="6dp"
                            app:indicatorColor="@color/primary_color"
                            app:trackColor="#E0E0E0"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/task_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7/10 tasks completed"
                                android:textSize="16sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:id="@+id/current_mood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your mood: Productive"
                                android:textSize="14sp"
                                android:textColor="#616161"/>
                        </LinearLayout>


                    </LinearLayout>

                    <!-- Daily Affirmation Section -->
                    <TextView
                        android:id="@+id/daily_affirmation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Focus on progress, not perfection."
                        android:textStyle="italic"
                        android:textColor="@color/primary_color"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="12dp"
                        android:background="#F5F5F5"
                        android:padding="8dp"
                        android:elevation="1dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Schedule -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Task Item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#F8F8F8"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Group Project Meeting"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academics"
                            android:textSize="12sp"
                            android:background="@color/primary_light"
                            android:textColor="@color/primary_color"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>

                    <!-- Task Item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#F8F8F8"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:00"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Submit Mobile App Assignment"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadline"
                            android:textSize="12sp"
                            android:background="#FFEBEE"
                            android:textColor="#F44336"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>

                    <!-- Task Item 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#F8F8F8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17:30"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Society Meeting"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social"
                            android:textSize="12sp"
                            android:background="#E1F5FE"
                            android:textColor="#0288D1"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>

                    <!-- View All Button -->
                    <TextView
                        android:id="@+id/view_all_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Full Calendar â†’"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:padding="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Features Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp"/>

            <!-- First row of features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Natural Language Task Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_add_task"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_add"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Task"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Voice Input Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_voice_input"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_voice"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voice Input"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Scan Documents Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_scan"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_task"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Notes"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Second row of features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Mood Journal Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_mood_journal"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_mood"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood Journal"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Summarize Notes Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_summarize"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_bmi"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summarize Notes"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Progress Tracker Feature -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_progress"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress Tracker"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Goal Breakdown Feature -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goal_breakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/primary_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/information"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Break Down Goals Into Tasks"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notification Center -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Notification Item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#FAFAFA"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_task"
                            android:layout_marginEnd="12dp"
                            app:tint="#F44336"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Assignment deadline in 3 hours!"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Notification Item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#FAFAFA">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="12dp"
                            app:tint="#4CAF50"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="You've completed 70% of today's tasks!"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- View All Button -->
                    <TextView
                        android:id="@+id/view_all_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All Notifications"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:padding="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu"/>

</LinearLayout>